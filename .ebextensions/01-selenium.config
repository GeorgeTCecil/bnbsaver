packages:
  yum:
    google-chrome-stable: latest

container_commands:
  01_install_chromedriver:
    command: |
      curl -sS -L https://chromedriver.storage.googleapis.com/114.0.5735.90/chromedriver_linux64.zip -o /tmp/chromedriver.zip
      unzip /tmp/chromedriver.zip -d /usr/local/bin/
      chmod +x /usr/local/bin/chromedriver
